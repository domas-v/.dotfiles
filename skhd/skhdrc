
# --- APP KEYBINDINGS
shift + alt - e : open -a "Visual Studio Code.app"
alt - e : open -a kitty.app
alt - d : open -a Safari.app
alt - r : open -a Obsidian.app
alt - a : open -a Reminders.app
alt - f : open -a Finder.app
alt - z : open -a Messages.app
alt - x : open -a Messenger.app
alt - c : open -a Slack.app

# --- WINDOWS WITHIN SPACE 
# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north

# stack or horizontal direction movement
alt - l : if [ "$(yabai -m query --spaces --space | jq -r '.type')" = "stack" ]; then (yabai -m window --focus stack.next || yabai -m window --focus stack.first); else yabai -m window --focus next || yabai -m window --focus first; fi
alt - h : if [ "$(yabai -m query --spaces --space | jq -r '.type')" = "stack" ]; then (yabai -m window --focus stack.prev || yabai -m window --focus stack.last); else yabai -m window --focus prev || yabai -m window --focus last; fi

# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# resize windows
ctrl + alt - h : yabai -m window --resize right:-40:0 2> /dev/null || yabai -m window --resize left:-40:0 2> /dev/null
ctrl + alt - j : yabai -m window --resize bottom:0:40 2> /dev/null || yabai -m window --resize top:0:40 2> /dev/null
ctrl + alt - k : yabai -m window --resize bottom:0:-40 2> /dev/null || yabai -m window --resize top:0:-40 2> /dev/null
ctrl + alt - l : yabai -m window --resize right:40:0 2> /dev/null || yabai -m window --resize left:40:0 2> /dev/null

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# --- SPACES
alt - n:  yabai -m space --focus next;
alt - p:  yabai -m space --focus prev;
# shift + alt - n: yabai -m space --create && \
#                   index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
#                   yabai -m window --space "${index}" && \
#                   yabai -m space --focus "${index}"

alt - 1:  yabai -m space --focus 1;
alt - 2:  yabai -m space --focus 2;
alt - 3:  yabai -m space --focus 3;
alt - 4:  yabai -m space --focus 4;
alt - 5:  yabai -m space --focus 5;
alt - 6:  yabai -m space --focus 6;
alt - 7:  yabai -m space --focus 7;
alt - 8:  yabai -m space --focus 8;

# create/destroy
ctrl + alt - c : yabai -m space --create
ctrl + alt - x : yabai -m space --destroy

# move window to space
shift + alt - n : yabai -m window --space next;
shift + alt - p : yabai -m window --space prev;
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;
shift + alt - 8 : yabai -m window --space 8;

# swap spaces
ctrl + alt - n : yabai -m space --swap next
ctrl + alt - p : yabai -m space --swap prev
ctrl + alt - 1 : yabai -m space --swap 1
ctrl + alt - 2 : yabai -m space --swap 2
ctrl + alt - 3 : yabai -m space --swap 3
ctrl + alt - 4 : yabai -m space --swap 4
ctrl + alt - 5 : yabai -m space --swap 5
ctrl + alt - 6 : yabai -m space --swap 6
ctrl + alt - 7 : yabai -m space --swap 7
ctrl + alt - 8 : yabai -m space --swap 8

# --- DISPLAYS
# change focus between external displays (left and right)
fn - c : yabai -m display --focus next
fn - z : yabai -m display --focus prev

# move window to display left and right
shift + fn - z : yabai -m window --display next; yabai -m display --focus next;
shift + fn - c : yabai -m window --display prev; yabai -m display --focus prev;

# toggle space layouts
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2
shift + alt - f : yabai -m space --layout stack
shift + alt - g : yabai -m space --layout bsp
